<div class="container">
	<h3>Review</h3>

<p>
  <strong>Author:</strong>
  <%= @review.author %>
</p>

<p>
  <strong>Image:</strong>
<%= image_tag @review.image_file_name,  size:'360x240' %></p>


<p>
  <strong>Rating:</strong>
<div class="star-rating" data-score= <%= @review.rating %> ></div> </p>

<p>
  <strong>Reviewtext:</strong>
  <%= @review.reviewText %>
</p>

<p>
  <strong>Reviewdate:</strong>
  <%= @review.reviewDate %>
</p>

<p>
  <strong>UserID:</strong>
  <%= @review.user_id %>
</p>

</div>

<%= link_to 'Edit', edit_review_path(@review) %> |
<%= link_to 'Back', :back %>

<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>