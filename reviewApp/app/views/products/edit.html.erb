<div class="container">
	<h1>Edit Product</h1>
		<%= form_for @product, html: {multipart: true}, url: product_path do |f| %>
		<div class="form-group">
			<%= f.label :pName %>
			<%= f.text_field :pName, class:'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :brand %>
			<%= f.text_field :brand, class:'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :averageCost %>
			<%= f.number_field :averageCost, class:'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :category %>
			<%= f.text_field :category, class:'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :releaseDate %>
			<%= f.date_field :releaseDate, class:'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_field :description, class:'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :image %>
			<%= f.file_field :image %>
		</div>


		<div class="form-group">
			<%= f.submit "Submit", class: 'btn btn-primary' %>
		</div>

		<div class="form-group">
			<%= link_to "Cancel", profiles_path%>
		</div>

		<% end %>
	</div>